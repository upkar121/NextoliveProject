<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/ux_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/hamburger"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nav_toggle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:onClick="handleToolbarClick"
                    android:paddingRight="10dp"
                    android:tag="0">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/chat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:onClick="handleToolbarClick"
                    android:paddingRight="10dp"
                    android:tag="1">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/down_arrow"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:onClick="handleToolbarClick"
                    android:paddingRight="10dp"
                    android:tag="2">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:onClick="handleToolbarClick"
                    android:paddingRight="10dp"
                    android:tag="3">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/qrcode" />
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--search work-->
        <LinearLayout
            android:id="@+id/ll_main_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_Search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/get_otp_border_white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:focusableInTouchMode="true"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/et_searchtext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/search"
                            android:imeOptions="actionDone"
                            android:longClickable="false"

                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:textColor="@color/dark_blue_800"
                            android:textColorHint="@color/grey"
                            android:textSize="12dp" />
                    </LinearLayout>


                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/grey"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight=".1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@drawable/ic_search_black" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnAdvSearch"
                    android:layout_width="156dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:onClick="search"
                    android:text="@string/advance_search"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_advSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/retangularborder"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="9">

                    <Button
                        android:id="@+id/btn_store"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2.2"
                        android:background="@drawable/get_otp_border_white"
                        android:drawableRight="@drawable/ic_my_location"
                        android:onClick="adv_btnsClick"
                        android:tag="0"
                        android:text="@string/store"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight=".2" />

                    <Button
                        android:id="@+id/btn_merchant"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3.2"
                        android:background="@drawable/get_otp_border_white"
                        android:drawableRight="@drawable/ic_my_location"
                        android:onClick="adv_btnsClick"
                        android:paddingRight="2dp"
                        android:tag="1"
                        android:text="@string/resturant"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight=".2" />

                    <Button
                        android:id="@+id/btn_restraunt"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3.2"
                        android:background="@drawable/get_otp_border_white"
                        android:drawableRight="@drawable/ic_my_location"
                        android:onClick="adv_btnsClick"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:tag="2"
                        android:text="@string/resturant"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:weightSum=".9">

                    <Switch
                        android:id="@+id/switch_freeshipping"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".35"
                        android:checked="false"
                        android:text="@string/free_delivery"
                        android:textSize="10sp"
                        android:theme="@style/SCBSwitch" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <Switch
                        android:id="@+id/switch_sales"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".25"
                        android:checked="false"
                        android:text="@string/Sales"
                        android:textSize="10sp"
                        android:theme="@style/SCBSwitch" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <Switch
                        android:id="@+id/switch_rates"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".25"
                        android:checked="false"
                        android:text="@string/Rates"
                        android:textSize="10sp"
                        android:theme="@style/SCBSwitch" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum=".9">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".3"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spinner_state"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:background="@android:color/transparent">

                        </Spinner>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight=".2"
                            android:src="@drawable/down_arrow"
                            app:tint="@color/black" />

                    </LinearLayout>


                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".3"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/spinner_city"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:background="@android:color/transparent">

                        </Spinner>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight=".2"
                            android:src="@drawable/down_arrow"
                            app:tint="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".3"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/spinner_category"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:background="@android:color/transparent">

                        </Spinner>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="7dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight=".2"
                            android:src="@drawable/down_arrow"
                            app:tint="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_AdvSearchSubmit"
                    android:layout_width="156dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/skyBlue"
                    android:gravity="center"
                    android:onClick="AdvSearchSubmit"
                    android:text="@string/Submit"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:visibility="visible"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/white"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/white">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resturant" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Campaigns" />

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/webpage2" />-->


        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </LinearLayout><!--main layout-->

    <RelativeLayout
        android:id="@+id/moreMenus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".9"
            android:background="#002d3a">

        </RelativeLayout>

        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="handleMenuClicks"
                    android:tag="0"
                    app:srcCompat="@drawable/ic_group_5036"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="MissingClass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/red_circle_with_border"
                    android:onClick="handleMenuClicks"
                    android:scaleType="centerInside"
                    android:tag="1"
                    app:srcCompat="@drawable/ic_meal"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online_food_ordering"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/purple_circle_with_border"
                    android:onClick="handleMenuClicks"
                    android:scaleType="centerInside"
                    android:tag="2"
                    app:srcCompat="@drawable/ic_product"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/green_circle_with_border"
                    android:scaleType="centerInside"
                    android:onClick="handleMenuClicks"
                    android:tag="3"
                    app:srcCompat="@drawable/ic_telephone"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reservation"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="MissingClass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="handleMenuClicks"
                    android:tag="5"
                    app:srcCompat="@drawable/ic_group_5037"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:tag="7"
                android:onClick="handleMenuClicks"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_group_128"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_bankGrid"
            android:visibility="gone"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:orientation="vertical"
                android:tag="21"
                android:onClick="handleMenuClicks"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/iv_ll_bankGrid"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/black_x" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:id="@+id/bankGrid"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="handleMenuClicks"
                        android:tag="8"
                        android:background="@drawable/blue_circle_with_border"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/onlinequeue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/online_queue"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="handleMenuClicks"
                        android:tag="10"
                        android:background="@drawable/purple_circle_with_border"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/hotel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/branch"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>


            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_lotteryGrid"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:onClick="handleMenuClicks"
                android:tag="21"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_ll_lotteryGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/black_x" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/ll_reservationGrid"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:orientation="vertical"
                android:onClick="handleMenuClicks"
                android:tag="21"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_ll_reservationGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/black_x" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/reservationGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:tag="11"
                        android:onClick="handleMenuClicks"
                        android:background="@drawable/red_circle_with_border"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/fork" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resturant"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"

                    android:orientation="vertical"

                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="handleMenuClicks"
                        android:tag="14"
                        android:background="@drawable/purple_circle_with_border"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/hotel1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/ll_ticketGrid"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:orientation="vertical"
                android:onClick="handleMenuClicks"
                android:tag="21"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_ll_ticketGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/black_x" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/ticketGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="handleMenuClicks"
                        android:tag="20"
                        android:background="@drawable/red_circle_with_border"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/cinema" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offers"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>


            </GridLayout>

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="-65dp"
        android:background="@drawable/bg"
        app:headerLayout="@layout/navigation_layout"
        app:insetForeground="#fff"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="#fff"
        android:layout_marginRight="-65dp">

        <ExpandableListView
            android:id="@+id/navigationmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:divider="@null"
            android:groupIndicator="@null"
            android:padding="5dp"
            android:scrollbars="none">
        </ExpandableListView>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>