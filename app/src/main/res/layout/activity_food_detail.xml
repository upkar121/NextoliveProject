    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_food_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
          <LinearLayout
              android:id="@+id/l1"
              android:layout_below="@+id/toolbar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/restaurant_img"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:layout_gravity="bottom|center_horizontal"
                  android:padding="10dp"
                  android:src="@drawable/food_one"
                  app:layout_collapseMode="parallax"/>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <TextView
                      android:id="@+id/resturant_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:textSize="17sp"
                      android:textColor="@color/black"
                      android:text="Shri Surendra Bhojnalay"
                      android:fontFamily="@font/allerta"
                      android:textStyle="bold"
                      app:layout_collapseMode="pin"/>
                  <TextView
                      android:id="@+id/subtitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:textColor="@color/black"
                      android:text="North Indian"
                      android:fontFamily="@font/allerta" />
                  <TextView
                      android:id="@+id/location_distance"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@color/black"
                      android:textSize="14sp"
                      android:text="Aliganj | 2.7kms"
                      android:fontFamily="@font/allerta" />
              </LinearLayout>
          </LinearLayout>
           <View
               android:id="@+id/view1"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/grey"
               android:layout_below="@+id/l1" />

