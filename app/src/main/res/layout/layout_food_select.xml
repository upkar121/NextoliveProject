<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.cardview.widget.CardView
      android:id="@+id/cardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@color/white_smoke"
      app:cardCornerRadius="10dp">
      <LinearLayout
          android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
              <ImageView
                  android:layout_width="14dp"
                  android:layout_height="14dp"
                  android:src="@drawable/green_circle_with_border"/>
              <TextView
                  android:layout_marginTop="3dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="@color/black"
                  android:text="Burger (1 Pc)"
                  android:fontFamily="@font/allerta" />
              <TextView
                  android:layout_marginTop="5dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="@color/grey"
                  android:text="$40"
                  android:fontFamily="@font/allerta" />
          </LinearLayout>
          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="110dp">
              <ImageView
                  android:layout_width="100dp"
                  android:layout_alignParentTop="true"
                  android:layout_height="100dp"
                  android:background="@drawable/food_one"
                  android:src="@drawable/food2"/>
              <RelativeLayout
                  android:id="@+id/add_number_item_relative_layout"
                  android:layout_width="90dp"
                  android:layout_marginLeft="5dp"
                  android:layout_alignParentBottom="true"
                  android:layout_height="25dp"
                  android:background="@drawable/retangularborder">
                  <RelativeLayout
                      android:id="@+id/add_number"
                      android:layout_centerInParent="true"
                      android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvSub"
                                            android:text="  -  "
                                            android:textStyle="bold"
                                            android:paddingLeft="10dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"/>
                                        <TextView
                                            android:id="@+id/tvQty"
                                            android:text=" 1 "
                                            android:layout_centerInParent="true"
                                            android:textColor="@color/green"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/tvAdd"
                                            android:text="  +  "
                                            android:paddingRight="10dp"
                                            android:layout_alignParentEnd="true"
                                            android:textColor="@color/green"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"/>
                                    </RelativeLayout>
                                    <TextView
                                        android:id="@+id/tv_add_item"
                                        android:layout_width="match_parent"
                                        android:textStyle="bold"
                                        android:visibility="gone"
                                        android:paddingTop="2dp"
                                        android:textAlignment="center"
                                        android:layout_height="match_parent"
                                        android:textSize="14sp"
                                        android:textColor="@color/green"
                                        android:text="ADD"
                                        android:fontFamily="@font/allerta" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
  </androidx.cardview.widget.CardView>
</RelativeLayout>