<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.FoodDeliveryFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp">
    <include
        android:id="@+id/top_picks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_frag_dashboard_toppicks"/>

    <include
        android:id="@+id/top_cuisines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_picks"
        layout="@layout/main_frag_dashboard_cuisines"/>
    </RelativeLayout>
    </ScrollView>
</FrameLayout>